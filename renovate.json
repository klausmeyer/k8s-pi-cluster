{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/(^|/)values\\.yaml$/"
      ],
      "matchStrings": [
        "tag: \"(?<currentValue>[^\"+]+)\" # renovate: image=(?<depName>[^\\s+]+)\\n"
      ]
    }
  ]
}
